
<h1>Edit Recipe Detail</h1>

<%= form_for @recipe, :url =>{:action => "update", :id =>@recipe} do |f| %>

<p>Name: <%= f.text_field 'name' %></p>
<p>Instructions: <%= f.text_field  'instructions' %></p>
<p>Ingredients: <%= f.text_field 'ingredients' %></p>
<p>Made: <%= f.text_field 'made' %></p> <br/>

<%= f.submit "Save changes" %>
<% end %>

<%= link_to 'Back', {:action => 'list' } %>