<% if @recipes.blank? %>
<p>There are not any recipes currently in the system.</p>
<% else %>
<p>Administer recipe information here. When adding a recipe, load the image first.</p>

	<ul id = "recipes">
	   <% @recipes.each do |c| %>
	    
	 <li>
	   <b> <%= link_to c.name, {:action => 'show_admin', :id => c.id, :imageId => c.imageId} -%>
	   <%= link_to 'Edit', {:action => 'edit', :id => c.id} -%>
	   <%= link_to 'Delete', {:action => 'delete', :id => c.id}, :onclick=> "return confirm('Are you sure you want to delete this item?')" %></b>
	 </li>
 
	   <% end %> 
	</ul> 

<% end %>
<p><%= link_to "Maintain Images", images_path, :id => "imageList_link" %>
<%= link_to "Add a new recipe ", {:action => 'new' }, :id => "recipeList_link" %></p>





